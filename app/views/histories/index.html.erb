<div class="history-page">
  <div class="container py-4">
    <!-- Back Button -->
    <div class="mb-4">
      <%= link_to dashboard_path, class: "btn btn-link ps-0" do %>
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
      <% end %>
    </div>

    <!-- History Section -->
    <div class="history-section">
      <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h2>Account History</h2>
      </div>

      <div class="timeline">
        <% @activities.each do |activity| %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <%= timeline_icon(activity) %>
            </div>
            <div class="timeline-content">
              <h4><%= activity.description %></h4>
              <% if activity.metadata.present? %>
                <div class="timeline-details">
                  <% activity.metadata.each do |key, value| %>
                    <div class="detail-item">
                      <span class="detail-label"><%= key.to_s.titleize %>:</span>
                      <span class="detail-value"><%= value %></span>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <span class="timeline-date"><%= activity.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
