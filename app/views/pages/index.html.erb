<!-- Hero Section -->
<section class="hero-section py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 px-4">
        <h1 class="hero-title mb-4">Banking Made Simple</h1>
        <p class="hero-subtitle mb-4">Secure, fast, and reliable banking solutions for your financial needs</p>
        <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg mt-2" do %>
          <i class="fas fa-user-plus me-2"></i>Open an Account
        <% end %>
      </div>
      <div class="col-lg-6">
        <div class="hero-illustration text-center py-4">
          <i class="fas fa-university fa-6x mb-4"></i>
          <i class="fas fa-shield-alt fa-4x me-3"></i>
          <i class="fas fa-mobile-alt fa-4x me-3"></i>
          <i class="fas fa-chart-line fa-4x"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section">
  <div class="container">
    <h2 class="section-title text-center">Why Choose JIL Bank?</h2>
    
    <div class="row g-4">
      <div class="col-md-4">
        <div class="feature-card">
          <i class="fas fa-shield-alt feature-icon"></i>
          <h3>Secure Banking</h3>
          <p>State-of-the-art security measures to protect your finances</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="feature-card">
          <i class="fas fa-mobile-alt feature-icon"></i>
          <h3>Mobile Banking</h3>
          <p>Bank anywhere, anytime with our mobile banking solutions</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="feature-card">
          <i class="fas fa-percentage feature-icon"></i>
          <h3>Great Rates</h3>
          <p>Competitive interest rates on savings and investments</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section class="services-section">
  <div class="container">
    <h2 class="section-title text-center">Our Services</h2>
    
    <div class="row g-4">
      <div class="col-md-3">
        <div class="service-card">
          <i class="fas fa-piggy-bank service-icon"></i>
          <h4>Savings Account</h4>
          <p>Grow your savings with competitive interest rates</p>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="service-card">
          <i class="fas fa-credit-card service-icon"></i>
          <h4>Credit Cards</h4>
          <p>Rewards and benefits with every purchase</p>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="service-card">
          <i class="fas fa-home service-icon"></i>
          <h4>Home Loans</h4>
          <p>Make your dream home a reality</p>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="service-card">
          <i class="fas fa-chart-line service-icon"></i>
          <h4>Investments</h4>
          <p>Grow your wealth with smart investments</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="container text-center">
    <h2>Ready to get started?</h2>
    <p class="mb-4">Join thousands of satisfied customers who trust JIL Bank</p>
    <div class="cta-buttons">
      <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg me-3" do %>
        <i class="fas fa-user-plus me-2"></i>Open Account
      <% end %>
      <%= link_to '#', class: "btn btn-outline-primary btn-lg" do %>
        <i class="fas fa-info-circle me-2"></i>Learn More
      <% end %>
    </div>
  </div>
</section>
