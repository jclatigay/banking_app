<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Accounts</h2>
    <%= link_to new_account_path, class: 'btn btn-primary' do %>
      <i class="fas fa-plus me-2"></i>Open New Account
    <% end %>
  </div>

  <div class="row g-4">
    <% @accounts.each do |account| %>
      <div class="col-md-6">
        <div class="account-card">
          <div class="account-card-header">
            <h3 class="account-type">
              <i class="fas <%= account.account_type == 'savings' ? 'fa-piggy-bank' : 'fa-wallet' %> me-2"></i>
              <%= account.account_type.titleize %>
            </h3>
            <span class="account-number">
              <%= account.account_number %>
            </span>
          </div>
          <div class="account-card-body">
            <div class="balance">
              <span class="balance-label">Available Balance</span>
              <span class="balance-amount">$<%= number_with_precision(account.balance, precision: 2) %></span>
            </div>
          </div>
          <div class="account-card-footer">
            <%= link_to account_path(account), class: 'btn btn-outline-primary btn-sm' do %>
              <i class="fas fa-eye me-1"></i>View Details
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>