<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Open New Account</h2>

          <%= form_with(model: @account, local: true) do |f| %>
            <% if @account.errors.any? %>
              <div class="alert alert-danger">
                <h4>Error:</h4>
                <ul>
                  <% @account.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :account_type, class: 'form-label' %>
              <%= f.select :account_type, 
                  options_for_select([['Checking', 'checking'], ['Savings', 'savings']]),
                  {}, 
                  class: 'form-select' %>
            </div>

            <div class="d-grid">
              <%= f.submit 'Open Account', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>