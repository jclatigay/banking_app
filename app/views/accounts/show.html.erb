<div class="account-details-page">
  <div class="container">
    <!-- Back Button -->
    <div class="mb-4">
      <%= link_to dashboard_path, class: "btn btn-link ps-0" do %>
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
      <% end %>
    </div>

    <!-- Account Overview Card -->
    <div class="account-overview-card mb-4">
      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="d-flex align-items-center mb-3">
            <i class="fas <%= @account.account_type == 'savings' ? 'fa-piggy-bank' : 'fa-wallet' %> account-icon me-3"></i>
            <div>
              <h1 class="account-title"><%= @account.account_type.titleize %> Account</h1>
              <p class="account-number">Account Number: <%= @account.account_number %></p>
            </div>
          </div>
        </div>
        <div class="col-md-6 text-md-end">
          <p class="balance-label">Available Balance</p>
          <h2 class="balance-amount">$<%= number_with_precision(@account.balance, precision: 2) %></h2>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions-section mb-4">
      <div class="row g-3">
        <div class="col-6 col-md-3">
          <%= link_to '#', class: 'quick-action-card' do %>
            <i class="fas fa-exchange-alt"></i>
            <span>Transfer</span>
          <% end %>
        </div>
        <div class="col-6 col-md-3">
          <%= link_to '#', class: 'quick-action-card' do %>
            <i class="fas fa-file-download"></i>
            <span>Download Statement</span>
          <% end %>
        </div>
        <div class="col-6 col-md-3">
          <%= link_to '#', class: 'quick-action-card' do %>
            <i class="fas fa-cog"></i>
            <span>Account Settings</span>
          <% end %>
        </div>
        <div class="col-6 col-md-3">
          <%= link_to '#', class: 'quick-action-card' do %>
            <i class="fas fa-chart-line"></i>
            <span>Analytics</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Transaction History -->
    <div class="transactions-section">
      <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h2>Transaction History</h2>
        <div class="d-flex gap-2">
          <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
              <i class="fas fa-filter me-1"></i>Filter
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">All Transactions</a></li>
              <li><a class="dropdown-item" href="#">Deposits</a></li>
              <li><a class="dropdown-item" href="#">Withdrawals</a></li>
              <li><a class="dropdown-item" href="#">Transfers</a></li>
            </ul>
          </div>
          <%= link_to '#', class: 'btn btn-outline-primary' do %>
            <i class="fas fa-download me-1"></i>Export
          <% end %>
        </div>
      </div>

      <!-- Transaction List -->
      <div class="transaction-list">
        <div class="transaction-item">
          <div class="transaction-icon incoming">
            <i class="fas fa-plus"></i>
          </div>
          <div class="transaction-details">
            <h4>Account Opening</h4>
            <span class="transaction-date"><%= @account.created_at.strftime("%B %d, %Y") %></span>
          </div>
          <div class="transaction-amount positive">
            $<%= number_with_precision(@account.balance, precision: 2) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 